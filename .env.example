# Example .env file for local development
# Copy this file to `.env` and fill in real values. Do NOT commit real secrets.

SUPABASE_URL="https://your-supabase-url.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_JWT_SECRET="your-supabase-jwt-secret"
SUPABASE_SERVICE_KEY="your-supabase-service-key"

CEREBRAS_API_KEY="your-cerebras-api-key"
GEMINI_API_KEY="your-gemini-api-key"
GROQ_API_KEY="your-groq-api-key"
SAMBANOVA_API_KEY="your-sambanova-api-key"

GOOGLE_OAUTH_REDIRECT_URI="http://localhost:8000/google-drive/oauth2callback"
GOOGLE_SHARED_DRIVE_FOLDER_ID="your-google-shared-drive-folder-id"
OAUTH_STATE_SECRET="your-oauth-state-secret"

ENV="development"
OAUTHLIB_INSECURE_TRANSPORT="1"

TAILORING_POLL_INTERVAL_SECONDS="0.5"
RESUME_CHECK_POLL_INTERVAL_SECONDS="9"
WORKER_POLL_INTERVAL_SECONDS="5.0"

TAILOR_DEBUG_VERBOSE="true"
DOCS_DEBUG_VERBOSE="true"

# Frontend-only (for use in client builds)
REACT_APP_GOOGLE_DEVELOPER_KEY="your-google-developer-key"
REACT_APP_GOOGLE_CLIENT_ID="your-google-client-id"

# Backend OAuth redirect URI (production should use your real domain)
# Example: https://api.example.com/google-drive/oauth2callback
# GOOGLE_OAUTH_REDIRECT_URI should also be registered in Google Cloud OAuth client
# Authorized redirect URIs.
# Runtime environment (set to "production" when deployed)
# ENV="production"
# Allow HTTP in development for oauthlib (avoid in production)
# OAUTHLIB_INSECURE_TRANSPORT="0"

# Server-owned Drive service account JSON path (optional override)
GOOGLE_SERVER_SERVICE_ACCOUNT_PATH="/absolute/path/to/server-service-account.json"
